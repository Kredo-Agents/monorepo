# Kredo environment configuration
# Copy this file to .env and adjust for your environment

# ===================
# Database configuration
# ===================

# MySQL/TiDB connection string
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://kredo:your_password@localhost:3306/kredo

# Docker Compose database settings (only for docker-compose)
DB_ROOT_PASSWORD=your_strong_root_password
DB_PASSWORD=your_strong_db_password
DB_NAME=kredo
DB_USER=kredo
DB_PORT=3306

# ===================
# App configuration
# ===================

# App port
APP_PORT=3000

# Environment: development | production
NODE_ENV=development

# ===================
# Auth configuration (Clerk)
# ===================

# Clerk Secret Key (server)
CLERK_SECRET_KEY=your_clerk_secret_key

# Clerk Publishable Key (client)
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Owner Open ID (Clerk user ID)
OWNER_OPEN_ID=your_open_id

# Owner name
OWNER_NAME=Your Name

# ===================
# Docker configuration
# ===================

# OpenClaw Docker image
OPENCLAW_IMAGE=openclaw:local

# Docker network
DOCKER_NETWORK=kredo-network

# ===================
# LLM configuration (optional)
# ===================

# DeepSeek API key
DEEPSEEK_API_KEY=your_deepseek_api_key

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key

# Google Generative Language API key
GOOGLE_API_KEY=your_google_api_key

# ===================
# Payment configuration (Helio / MoonPay Commerce)
# ===================

# Helio API key for server-side operations
HELIO_API_KEY=your_helio_api_key

# Shared secret for verifying Helio webhook callbacks
HELIO_WEBHOOK_SECRET=your_helio_webhook_secret

# Helio Pay Link IDs for each credit tier (create these in the Helio dashboard)
HELIO_PAYLINK_100=your_paylink_id_for_100_credits
HELIO_PAYLINK_500=your_paylink_id_for_500_credits
HELIO_PAYLINK_1000=your_paylink_id_for_1000_credits

# ===================
# Other configuration
# ===================

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable debug mode
DEBUG=false
